@{
  Layout = "_Layout";
}

<h1>Add New Department</h1>
<form action='/departments' method='post'>
  <div class="form-group">
    <label for='departmentName'>Department Name</label>
    <input id='departmentName' name='departmentName' type='text'>

    <select name="employeeId">
      @foreach(var employee in Model)
      {
        <option value="@employee.id">@employee.name</option>
      }
    </select>
  </div>
  <button type='submit' class='btn btn-info'>Submit</button>
</form>

<a href='/employees'><button class='btn btn-info'>View Employees</button></a>
<a href='/departments'><button class='btn btn-info'>View Departments</button></a>
<a href='/'><button class='btn btn-info'>Back Home</button></a>
