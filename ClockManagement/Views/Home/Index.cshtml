@using ClockManagement.Models;

@{
    Layout = "_Layout";
}

@if (Employee.login == false)
{
    <p>@Model</p>
    <div class="form-group">
        <form action="/login" method="post">
            <label for="userName">Username: </label>
            <input id="userName" name="userName" placeholder=" Username" type="text">
            <label for="password">Password: </label>
            <input id="password" name="password" placeholder=" Password" type="text">
            <button type="submit">Log In</button>
        </form>
        <a href='/signup'><button class='btn btn-info'>Sign Up</button></a>
    </div>
}
else
{
    <p>@Model</p>
    <a href="/departments" class="btn btn-info">Departments</a>
    <a href="/employees" class="btn btn-info">Employees</a>
    <a href = "/reports" class="btn btn-info">View Reports</a>
}
